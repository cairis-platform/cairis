<protocol name="JSON-RPC" value="10">
  <description>None</description>
  <rationale>None</rationale>
</protocol>
<protocol name="TLS" value="1">
  <description>None</description>
  <rationale>None</rationale>
</protocol>

<privilege name="privileged" value="10">
  <description>None</description>
  <rationale>None</rationale>
</privilege>
<privilege name="normal" value="1">
  <description>None</description>
  <rationale>None</rationale>
